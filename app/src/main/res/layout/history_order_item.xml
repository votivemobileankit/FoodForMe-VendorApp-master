<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/orderlist_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardView"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.foodforme.vendore.customwidget.CustomTextView
                android:id="@+id/restrorent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:fontAssetName="@string/font_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_20sdp" />

            <com.foodforme.vendore.customwidget.CustomTextView
                android:id="@+id/order_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:fontAssetName="@string/font_light_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_20sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/darker_gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_gravity="center">

                    <com.foodforme.vendore.customwidget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/orderId"
                        android:gravity="center"
                        app:fontAssetName="@string/font_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"/>


                    <com.foodforme.vendore.customwidget.CustomTextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_horizontal|center"
                        app:fontAssetName="@string/font_light_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:ellipsize="end"/>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_gravity="center">

                    <com.foodforme.vendore.customwidget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/order_status"
                        android:gravity="center"
                        app:fontAssetName="@string/font_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"

                        android:layout_weight="1"/>


                    <com.foodforme.vendore.customwidget.CustomTextView
                        android:id="@+id/order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_horizontal|center"
                        app:fontAssetName="@string/font_light_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:ellipsize="end"/>

                </LinearLayout>





            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2">


                <com.foodforme.vendore.customwidget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    app:fontAssetName="@string/font_regular"
                    android:textColor="@color/black"
                    android:text="@string/payment_type"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_gravity="start|center"
                    android:layout_weight="1.5"/>


                <com.foodforme.vendore.customwidget.CustomTextView
                    android:id="@+id/payment_type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_weight="0.50"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:fontAssetName="@string/font_light_regular" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray"/>


            <Button
                android:id="@+id/view_detail_btn"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/red_bg"
                android:text="@string/view_detail"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_20sdp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

