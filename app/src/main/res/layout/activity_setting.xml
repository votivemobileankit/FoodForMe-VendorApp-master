<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity">



 <!--   <include android:id="@+id/toolbar"
        layout="@layout/toolbar2" />-->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:layout_weight="0.30">
                    <com.foodforme.vendore.customwidget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        app:fontAssetName="@string/font_medium"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:layout_weight="0.20"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">
                    <ImageButton
                        android:id="@+id/select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/select_not"/>
                    <ImageButton
                        android:id="@+id/unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/unselect_not"/>
                  <!--  <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchCompatTheme" />-->
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                tools:ignore="Suspicious0dp">

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:layout_weight="0.30">
                    <com.foodforme.vendore.customwidget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_language_txt"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        app:fontAssetName="@string/font_medium"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                     <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                         android:orientation="horizontal"
                    android:elevation="@dimen/_2sdp"
                    android:translationZ="@dimen/_2sdp"
                    android:layout_margin="@dimen/_10sdp">

                         <com.foodforme.vendore.customwidget.CustomTextView
                             android:id="@+id/english_btn"
                             android:layout_width="@dimen/_50sdp"
                             android:layout_height="match_parent"
                             android:text="@string/english"
                             android:gravity="center"
                             android:textColor="@android:color/white"
                             android:background="@drawable/corners11"
                             android:textSize="@dimen/_10sdp"/>


                         <com.foodforme.vendore.customwidget.CustomTextView
                             android:id="@+id/arabic_btn"
                             android:layout_width="@dimen/_50sdp"
                             android:layout_height="match_parent"
                             android:text="@string/arabic"
                             android:visibility="gone"
                             android:gravity="center"
                             android:textColor="@color/black"
                             android:background="@drawable/corners14"
                             android:textSize="@dimen/_10sdp"/>

                         <com.foodforme.vendore.customwidget.CustomTextView
                             android:id="@+id/german_btn"
                             android:layout_width="@dimen/_50sdp"
                             android:layout_height="match_parent"
                             android:text="@string/german"
                             android:gravity="center"
                             android:textColor="@color/black"
                             android:background="@drawable/corners14"
                             android:textSize="@dimen/_10sdp"/>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                tools:ignore="Suspicious0dp">

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>