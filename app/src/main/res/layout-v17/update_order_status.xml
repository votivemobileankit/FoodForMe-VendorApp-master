<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.foodforme.vendore.customwidget.CustomTextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Update Status"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20sdp"
        app:fontAssetName="@string/font_regular" />

    <RelativeLayout
        android:id="@+id/new_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <com.foodforme.vendore.customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/neworder"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontAssetName="@string/font_regular" />

        <ImageView
            android:id="@+id/new_order_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/unselect" />

        <ImageView
            android:id="@+id/new_order_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/select"
            android:visibility="gone" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/order_conf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <com.foodforme.vendore.customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/confirm_order"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontAssetName="@string/font_regular" />


        <ImageView
            android:id="@+id/order_conf_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/unselect"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/order_conf_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/select"
            android:visibility="visible" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/preparing_order_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <com.foodforme.vendore.customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/preparing_order"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontAssetName="@string/font_regular" />

        <ImageView
            android:id="@+id/preparing_order_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/unselect" />

        <ImageView
            android:id="@+id/preparing_order_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/select"
            android:visibility="gone" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@android:color/darker_gray" />


    <RelativeLayout
        android:id="@+id/order_ready"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <com.foodforme.vendore.customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/ready_order"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontAssetName="@string/font_regular" />

        <ImageView
            android:id="@+id/order_ready_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/unselect" />

        <ImageView
            android:id="@+id/order_ready_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/select"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>