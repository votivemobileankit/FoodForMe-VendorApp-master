<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">




            <com.foodforme.vendore.customwidget.CustomTextView
                android:id="@+id/ResendOTP_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/otubli_vendore_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:fontAssetName="@string/font_medium" />

            <com.foodforme.vendore.customwidget.CustomTextView
                android:id="@+id/ResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/forgot_password"
                android:layout_below="@+id/ResendOTP_txt"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                app:fontAssetName="@string/font_light_regular"
                android:layout_marginBottom="@dimen/_20sdp"/>



            <RelativeLayout
                android:id="@+id/Forgot_pass_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_red_bg"
                android:layout_below="@+id/ResendOTP"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/email_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/black_email"
                    android:layout_marginStart="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/Forgot_pass_ext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:hint="@string/email"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textEmailAddress"
                    android:layout_toRightOf="@+id/email_img"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center|start"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:layout_toEndOf="@+id/email_img" />

            </RelativeLayout>


            <com.foodforme.vendore.customwidget.CustomTextView
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/Forgot_pass_relative"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/red_bg"
                android:text="@string/submit"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                app:fontAssetName="@string/font_medium"/>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>